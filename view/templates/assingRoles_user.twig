{% extends 'base.html' %}
{% block content %}

	<p>Asignar Roles</p>
    <table>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Rol</th>

        </tr>
        {% for usr in users%}
        <tr>
    		<td>{{usr['nombre']}}</td>
    		<td>{{usr['apellido']}}</td>
    		<form action="../controller/saveRolesChanges_user.php" method="POST">
    				<input type="hidden" name="id" value="{{usr['id']}}">
    				<td><select name="rol">
    					{% set r = usr['id_rol'] %}
    					{% for rol in roles %}
							{% if r == rol['id'] %}
    							<option value="{{rol['id']}}" selected>{{rol['nombre']}}</option>
    						{%else%}
    							<option value="{{rol['id']}}">{{rol['nombre']}}</option>
    						{%endif%}
    					{%endfor%}
    				</select></td>
    				<td><input type="submit" name="save" value="Cambiar"></td>	
    		</form>   
        </tr>
        {% endfor %}
    </table>

{% endblock %}