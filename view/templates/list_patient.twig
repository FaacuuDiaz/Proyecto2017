{% extends 'base.twig'%}
{% block content %}

<p>Listar Pacientes</p>
<div class="table-responsive">
    <table class="table table-striped">
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Domicilio</th>
            <th>Telefono</th>
            <th>Fecha Nacimiento</th>
            <th>Genero</th>
            <th>Obra Social</th>
            <th>Tipo Documento</th>
            <th>Numero</th>

        </tr>
        {% for ptn in patients%}
        <tr>
    		<td>{{ptn['nombre']}}</td>
    		<td>{{ptn['apellido']}}</td>
    		<td>{{ptn['domicilio']}}</td>
    		<td>{{ptn['tel']}}</td>
    		<td>{{ptn['fecha_nac']}}</td>
    		{%if ptn['genero'] == 'M' %}
    			<td>{{'Masculino'}}</td>
    		{%else%}
    			<td>{{'Femenino'}}</td>
    		{%endif%}
    		<td>{{ptn['obra_social_id']['nombre']}}</td>
    		<td>{{ptn['tipo_doc_id']['nombre']}}</td>
    		<td>{{ptn['numero']}}</td>		
	        <td><a href="update_patient.php?ptn={{ptn['id']}}&updt=1"><img src="../view/img/modificar.png" alt="Listar" height="40" width="40"></a></td>
            {% if delete %}
	           <td><a href="remove_patient.php?ptn={{ptn['id']}}" onclick="if(!confirm('Â¿Desea eliminar el usuario?'))return false;"><img src="../view/img/eliminar.png" alt="eliminar" height="40" width="40"></a></td>
            {% endif %}
            <td><a href="show_datosDem.php?ptn={{ptn['datos_demograficos']}}"><img src="../view/img/datosDem.png" alt="Listar" height="40" width="45"></a></td>
        </tr>
        {% endfor %}
    </table>
</div>

{% include 'links_pagination.twig'%}


{% endblock %}