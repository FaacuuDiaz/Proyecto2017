{% extends 'base.twig' %}
{% block content %}

	<p>Perfil</p>

	<form action="../controller/register_user.php" method="POST">
		Nombre: <input type="text" name="name" placeholder="Ingrese el Nombre" value="{{info[0]['nombre']}}">
		Apellido: <input type="text" name="lastname" placeholder="Ingrese el Apellido" value="{{info[0]['apellido']}}">
		Usuario: <input type="text" name="user" pattern="[a-zA-Z]{4,15}$" value="{{info[0]['username']}}" placeholder="Ingrese el usuario">
		Contraseña: <input type="password" pattern="[a-z0-9A-Z]{6,12}$" name="pass" value="{{info[0]['password']}}" placeholder="Ingrese la contraseña"> 
		Email: <input type="email" name="email" placeholder="ejemplo@gmail.com" value="{{info[0]['email']}}">
		<input type="submit" name="submit" value="Aceptar">
		<input type="hidden" name="update" value="1">
	</form>

{% endblock %}