{% extends 'base.twig'%}

{%block content%}

<p>Registrarse</p>
    {% if error is defined %}
    <p class="text-danger">{{ error }}</p>
    {% endif %}	
    <div class="row">
<div class="col-sm-5"></div>
    <div class="col-sm-4">
	<form action="../controller/register_user.php" method="POST">


		{% if user is defined %}
			<input type="hidden" name="update" value="1">
			<input type="hidden" name="id" value="{{user['id']}}">
			<div class="form-group">
			<label>Nombre: </label><input type="text" name="name" value="{{user['nombre']}}" placeholder="Ingrese el Nombre" required> 
			</div>
			<div class="form-group">
			<label>Apellido:</label> <input type="text" name="lastname" value="{{user['apellido']}}" placeholder="Ingrese el Apellido" required>
			</div>
			<div class="form-group">
			<label>Usuario:</label><input type="text" name="user" value="{{user['username']}}" pattern="[a-zA-Z]{4,15}$" placeholder="Ingrese el usuario" required>
			</div>
			<div class="form-group">
			<label>Contrase単a: </label><input type="password" value="{{user['password']}}" pattern="[a-z0-9A-Z]{6,12}$" name="pass" placeholder="Ingrese la contrase単a" required>
			</div>
			<div class="form-group">
			<label>Email: </label><input type="email" name="email" value="{{user['email']}}" placeholder="ejemplo@gmail.com" required>
			</div>

		{% else %}

			<input type="hidden" name="update" value="0">
			<div class="form-group">
			<label>Nombre: </label><input type="text" name="name" placeholder="Ingrese el Nombre" required> 
			</div>
			<div class="form-group">
			<label>Apellido:</label> <input type="text" name="lastname" placeholder="Ingrese el Apellido" required>
			</div>
			<div class="form-group">
			<label>Usuario:</label><input type="text" name="user" pattern="[a-zA-Z]{4,15}$" placeholder="Ingrese el usuario" required>
			</div>
			<div class="form-group">
			<label>Contrase単a: </label><input type="password" pattern="[a-z0-9A-Z]{6,12}$" name="pass" placeholder="Ingrese la contrase単a" required>
			</div>
			<div class="form-group">
			<label>Email: </label><input type="email" name="email" placeholder="ejemplo@gmail.com" required>
			</div>
			
		{% endif %}
		<input type="submit" name="submit" value="Aceptar">




	</form>
</div>
</div>
{%endblock%}